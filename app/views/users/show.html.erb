<%= render 'shared/title', title: @user.username %>

<p class="text-right">
  <% if correct_user?(@user) %>
    <%= link_to 'edit user', edit_user_path(@user), class: "btn btn-default" %>
  <% end %>
  <%= link_to 'back to all posts', posts_path, class: "btn btn-default" %>
</p>

<% if @user.comments.any? %>
  <h4><%= pluralize(@user.comments.count, 'user comment') %></h4>
  <%= render @user.comments %>
<% end %>

<h4><%= pluralize(@user.posts.count, 'user post') if @user.posts.any? %></h4>

<div class="post-blocks">
  <div class="thumbnail">
    <div class="caption">
      <%= link_to content_tag(:span, "all #{Post.count}", class: ( ["index"].include?(action_name) && ["posts"].include?(controller_name) ? "label label-danger" : "label label-default")), posts_path %>
      <%= render Category.all %>
    </div>
  </div>
  <%= render @user.posts if @user.posts.any? %>
</div>
