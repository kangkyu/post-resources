<%= render 'shared/title', title: 'Log-in' %>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
<%= form_for :login, url: login_path do |f| %>
  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, class: "form-control", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "form-control" %>
  </div>
  <div class="text-right"><%= f.submit "Login", class: "btn btn-default" %></div>
<% end %>
  </div>
</div>
