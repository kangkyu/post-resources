<div class="panel panel-default comment-panel">
  <div class="panel-body">

<% if ["show"].include?(action_name) && ["users"].include?(controller_name) %>

  <h4>"<%= comment.body %>"</h4>
  <p>
    <span class="floats">on <%= link_to comment.post.title, post_path(comment.post) %>,</span>
    <span class="floats"><%= pluralize(net_votes(comment), 'vote') %></span>
  </p>
  <p class="text-right">
    - added <%= time_ago_in_words comment.created_at %> ago
  </p>

<% else %>

  <div class="panel panel-default text-center vote-panel">
    <div class="panel-body">
      <p><%= caret_vote_icon(comment, :up) %></p>
      <p><%= net_votes(comment) %></p>
      <p><%= caret_vote_icon(comment, :down) %></p>
    </div>
  </div>

  <h4>"<%= comment.body %>"</h4>
  <p class="text-right">
    <span class="floats">- added <%= time_ago_in_words comment.created_at %> ago,</span>
    <span class="floats">by <%= link_to comment.user.username, user_path(comment.user) %></span>
  </p>

<% end %>

  </div>
</div>
