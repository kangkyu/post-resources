<div class="row">
  <div class="col-sm-2 col-xs-3">

  <div class="panel panel-default text-center">
    <div class="panel-heading">
      <%= caret_up_icon(@post) %>
    </div>
    <div class="panel-body">
      <%= @post.votes.where(voted: true).count - @post.votes.where(voted: false).count %>
      <%# @post.votes.count %>
      <!-- counts -->
    </div>
    <div class="panel-footer text-center">
      <%= caret_down_icon(@post) %>
    </div>
  </div>

  </div>
  <div class="col-sm-10 col-xs-9">

  <div class="panel panel-default">
    <div class="panel-heading">
      <%= render @post.categories %>
      <%= external_url @post.url do %>
        <h2><%= @post.title %></h2>
        <h4><%= @post.url %></h4>
      <% end %>
    </div>
    <div class="panel-body">
      <p><%= simple_format @post.description %></p>
      <p>
        - written by <%= link_to @post.user.username, user_path(@post.user) %>
        - added at <%= @post.created_at %>
      </p>
      <p><%= pluralize(@post.comments.size, 'Comment') %></p>
      <% if correct_user?(@post.user) %>
        <%= link_to 'edit post', edit_post_path(@post), class: "btn btn-default" %>
      <% end %>
      <%= link_to 'back to all posts', posts_path, class: "btn btn-default" %>
    </div>
  </div>

  </div>
</div>

<% if user_log_in? %>
<div class="well">
  <%= form_for [@post, Comment.new] do |f| %>
    <div class="form-group">
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-default" %>
  <% end %>
</div>
<% end %>

<h4><%= 'post comments' if @post.comments.any? %></h4>
<%= render @post.comments %>
