<%= render 'shared/title', title: 'Add Category' %>

<%= form_for @category, html: {class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :name, class: "form-control" %></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10"><%= f.submit class: "btn btn-default" %></div>
  </div>
<% end %>
