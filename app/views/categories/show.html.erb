<h2>Category: <%= @category.name %></h2>
<p>
<% if current_user %>
  <%= link_to 'new category', new_category_path, class: "btn btn-default" %>
  <%= link_to 'new post', new_post_path, class: "btn btn-default" %>
<% end %>
</p>
<h4><%= pluralize(@category.posts.count, 'category post') if @category.posts.any? %></h4>
<div class="post-blocks">
  <%= render @category.posts %>
</div>
